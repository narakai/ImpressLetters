<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_red_top"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_logo"
                android:layout_width="150dp"
                android:layout_height="77dp"
                android:background="@drawable/intro_logo"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_title_user"
                android:textColor="@color/white"
                android:textSize="@dimen/font_default_15dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <ImageButton
                android:id="@+id/btn_kakao_share"
                android:layout_width="60dp"
                android:layout_height="71dp"
                android:background="@drawable/share_01"></ImageButton>

            <ImageButton
                android:id="@+id/btn_kakao_story_share"
                android:layout_width="60dp"
                android:layout_height="71dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/share_02"></ImageButton>

            <ImageButton
                android:id="@+id/btn_facebook_share"
                android:layout_width="60dp"
                android:layout_height="71dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/share_03"></ImageButton>

            <ImageButton
                android:id="@+id/btn_instagram_share"
                android:layout_width="60dp"
                android:layout_height="71dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/share_04"></ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:background="@color/line"></LinearLayout>

        <TextView
            android:id="@+id/btn_more_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="12dp"
            android:text="더보기"
            android:textColor="@color/black"
            android:textSize="@dimen/font_default_15dp" />
    </LinearLayout>

</LinearLayout>