<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_new">


    <LinearLayout
        android:layout_centerHorizontal="true"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="119dp"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/icon_money"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재벌들이 성공하기 위해 봤던"
            android:textColor="#fff"
            android:textSize="17dp"
            android:fontFamily="@font/auctiongothic_medium"
            android:includeFontPadding="false"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"


            />

    </LinearLayout>



        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부자되는 글"
            android:textColor="#FFB300"
            android:textSize="45dp"
            android:fontFamily="@font/auctiongothic_bold"
            android:includeFontPadding="false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="183dp"
            >


            <gradient.mylibrary.GradienTextView
                android:id="@+id/fading_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E9E9E9"
                android:textSize="17dp"
                android:layout_marginLeft="5dp"

                app:original_color="#E9E9E9"
                app:change_color="#E9E9E9"
                android:text="33333333333"
                android:layout_gravity="center"
                android:fontFamily="@font/auctiongothic_light"
                android:visibility="visible"
                />
            <gradient.mylibrary.GradienTextView
                android:id="@+id/fading_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#E9E9E9"
                android:textSize="17dp"

                android:includeFontPadding="true"
                android:fontFamily="@font/auctiongothic_light"
                android:visibility="visible"
                app:original_color="#E9E9E9"
                app:change_color="#E9E9E9"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                />
            <!--app:letterDuration="250"-->







        </LinearLayout>
        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:fontFamily="@font/auctiongothic_light"
            android:textColor="#E9E9E9"
            />


    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="COPYRIGHT ⓒ 2018 퓨처드림 ALL RIGHTS RESERVED"
        android:textColor="@color/white"
        android:textSize="12dp" />

</RelativeLayout>
