<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat"></style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:typeface">normal</item>
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/status_bar</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--
        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="user_input_text">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/sign_box</item>
    </style>

    <style name="left_menu_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_default_17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="left_menu_warn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/red_orange</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="left_menu_new">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/red_orange</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="input_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/font_default_15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/many_gray</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <style name="AppTheme.StatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/statusbar_brown</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.BlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/background_white</item>
        <item name="colorButtonNormal">@color/permission_button_color</item>
    </style>
</resources>
